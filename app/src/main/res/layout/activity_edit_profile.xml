<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C2E92"
    tools:context=".EditProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="6dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/caret_left_fill"
                    android:contentDescription="Voltar" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/placeholder"
                        android:elevation="6dp" />

                    <ImageView
                        android:id="@+id/btnChangeImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/bg_circle_blue"
                        android:padding="8dp"
                        android:src="@drawable/ic_camera"
                        android:elevation="10dp"
                        app:tint="@android:color/white"
                        android:contentDescription="Alterar imagem" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome completo"
                    android:textColor="#5B6FA9"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite seu nome"
                    android:textColor="#0C2AA5"
                    android:textColorHint="#5B6FA9"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local de atendimento"
                    android:textColor="#5B6FA9"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ex: H15 - Sala 204"
                    android:textColor="#0C2AA5"
                    android:textColorHint="#5B6FA9"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dias, matérias e horários de atendimento"
                    android:textColor="#5B6FA9"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />

                <LinearLayout
                    android:id="@+id/containerHorarios"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:id="@+id/btnAddHorario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_btn_outline"
                    android:padding="10dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adicionar dia, matéria e horário"
                        android:textColor="#0C2E92"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSalvar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bg_btn_access"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salvar alterações"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
