<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMuralPostActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_mural_background"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Novo Post"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:id="@+id/btnFechar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_delete"
                    app:tint="@android:color/black"/>
            </RelativeLayout>

            <!-- Campo: Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Título"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2b6ea6"
                android:layout_marginLeft="16dp"/>

            <EditText
                android:id="@+id/etTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite o título do post"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:background="@drawable/bg_input"
                android:textSize="16sp"
                android:layout_marginHorizontal="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Descrição"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2b6ea6"
                android:layout_marginHorizontal="16dp"/>

            <EditText
                android:id="@+id/etDescricao"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Digite a descrição do post"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:background="@drawable/bg_input"
                android:textSize="14sp"
                android:layout_marginHorizontal="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Anexos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2b6ea6"
                android:layout_marginHorizontal="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddImagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Adicionar Imagem"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/bg_btn_access"
                android:textColor="@android:color/black"
                android:layout_marginHorizontal="16dp"/>

            <GridLayout
                android:id="@+id/containerImagens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:columnCount="6"
                android:orientation="horizontal"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddArquivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Adicionar Arquivo"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/bg_btn_access"
                android:textColor="@android:color/black"
                android:layout_marginHorizontal="16dp"/>

            <LinearLayout
                android:id="@+id/containerArquivos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Adicionar Vídeo +"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/bg_btn_access"
                android:textColor="@android:color/black"
                android:layout_marginHorizontal="16dp"/>

            <LinearLayout
                android:id="@+id/containerVideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/btnPublicar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Publicar"
                android:textStyle="bold"
                android:backgroundTint="#2B9FFF"
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="16dp"/>
        </LinearLayout>
</ScrollView>