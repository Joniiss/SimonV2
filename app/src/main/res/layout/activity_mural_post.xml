<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".MuralPostActivity"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_mural_background"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Caso de Teste"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_paperclip"
                    app:tint="@android:color/black"
                    android:layout_marginEnd="12dp"/>

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@android:color/black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitulo"
                android:text="Marcos de Castro Santos Junior"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvTitulo"
                android:layout_marginTop="6dp"
                android:text="02/08/2025"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Aqui vai a descrição completa do post, sem limite de linhas, ocupando todo o espaço necessário."
            android:textSize="16sp"
            android:padding="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvAnexos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Anexos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2b6ea6"
            android:layout_marginLeft="16dp"/>

        <LinearLayout
            android:id="@+id/layoutLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/tvMural">

            <View
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="#0C2E92"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvImagens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Imagens"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2b6ea6"
            android:layout_marginLeft="16dp"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/ivAnexo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvVideos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vídeos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2b6ea6"
            android:layout_marginLeft="16dp"/>

        <LinearLayout
            android:id="@+id/flVideos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvArquivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arquivos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2b6ea6"
            android:layout_marginLeft="16dp"/>

        <LinearLayout
            android:id="@+id/flArquivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"/>

    </LinearLayout>

</ScrollView>