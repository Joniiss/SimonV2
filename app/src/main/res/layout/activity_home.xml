<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_header_gradient"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="24dp">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Luan"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/white"/>

            <ImageView
                android:id="@+id/ivUserImg"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_person"
                app:tint="@android:color/white" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="@string/logout"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:drawableEnd="@drawable/ic_logout"
            android:drawablePadding="8dp"/>

    </LinearLayout>

    <!-- CONTEÚDO -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintTop_toBottomOf="@id/header">

        <!-- Card Matérias -->

        <!-- Linha com 2 cards -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSubjects"
            android:layout_width="350dp"
            android:layout_height="285dp"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="18dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card"
                android:gravity="center"
                android:orientation="vertical"
                app:cardBackgroundColor="@android:color/transparent">

                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="91dp"
                    android:src="@drawable/ic_materias"
                    app:tint="#0C2E92" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Matérias"
                    android:textColor="#0C2E92"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <!-- Card Minhas monitorias -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMyTutoring"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_monitorias"
                        app:tint="#0C2E92"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="Minhas\nmonitorias"
                        android:textColor="#0C2E92"
                        android:textSize="20sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Button -->
    <ImageView
        android:id="@+id/ivChat"
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:srcCompat="@drawable/ic_chat"
        app:tint="@android:color/white"
        android:background="@drawable/bg_circle_blue"
        android:padding="16dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>


    <!-- FOOTER -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/bg_footer"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/s_logo"
            android:contentDescription="Logo"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
