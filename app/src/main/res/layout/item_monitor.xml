<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Foto fora do card -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfessor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/placeholder"
        android:elevation="4dp"
        app:civ_border_color="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>

    <!-- Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProfessor"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/ivProfessor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-60dp"> <!-- empurra metade da foto para dentro -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="60dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="16dp">

            <!-- Nome -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marcos de Castro S. Junior"
                android:textColor="#0C2E92"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Linha divisória -->
            <View
                android:id="@+id/divisor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0C2E92"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                android:layout_marginTop="8dp"/>

            <!-- Onde encontrar -->
            <TextView
                android:id="@+id/tvWhere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localização"
                android:textSize="14sp"
                android:textColor="#808080"
                app:layout_constraintTop_toBottomOf="@id/divisor"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H15 - Sala 204"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#0C2E92"
                app:layout_constraintTop_toTopOf="@id/tvWhere"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Próximo horário -->
            <TextView
                android:id="@+id/tvNextHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximo horário de atendimento"
                android:textSize="14sp"
                android:textColor="#808080"
                app:layout_constraintTop_toBottomOf="@id/tvPlace"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ter 08:00"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#0C2E92"
                app:layout_constraintTop_toTopOf="@id/tvNextHour"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Botão -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAccessMonitor"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Saiba Mais"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@null"
                android:background="@drawable/bg_btn_access"
                app:cornerRadius="25dp"
                app:layout_constraintTop_toBottomOf="@id/tvTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
