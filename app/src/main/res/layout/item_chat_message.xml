<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    tools:ignore="UseCompoundDrawables">

    <!-- Envolve o conteúdo em um container flexível -->
    <LinearLayout
        android:id="@+id/messageWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        tools:ignore="RtlHardcoded">

        <!-- Bolha da mensagem -->
        <LinearLayout
            android:id="@+id/messageBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_bubble_right"
            android:elevation="2dp"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exemplo de mensagem"
                android:textColor="#222222"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Metadados: hora, status -->
        <TextView
            android:id="@+id/tvMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Você • 10:32"
            android:textColor="#888888"
            android:textSize="11sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
